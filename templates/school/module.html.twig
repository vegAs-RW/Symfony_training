{% extends 'base.html.twig' %}

{% block content %}
    <h1> Module : {{ module.name }} </h1>

    <p> {{ module.description }} </p>

    <h2> Liste des formations qui incluent ce module </h2>
    <ul>
	    {% for training in module.trainings %}
	        <li><a href=" {{ path('show_training' , { 'id' : training.id} ) }}">{{ training.name }} </a></li>
	    {% endfor %}
    </ul>
{% endblock %}
