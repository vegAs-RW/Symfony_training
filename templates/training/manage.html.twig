{% extends 'base.html.twig' %}

{% block title %}Manage Training{% endblock %}

{% block content %}
    <h1>Manage Training: {{ training.name }}</h1>
    <p>{{ training.description }}</p>

    <ul>
    {% if training.modules is not empty %}
        {% for module in training.modules %}
            <li>
                {{ module.name }}
                <a href="{{ path('training_delete_module', {'trainingId': training.id, 'moduleId': module.id}) }}"
                   onclick="return confirm('Are you sure you want to delete this module?');">
                   Delete
                </a>
            </li>
        {% endfor %}
        {% else %}
            <li>No modules found.</li>
        {% endif %}
    </ul>
{% endblock %}